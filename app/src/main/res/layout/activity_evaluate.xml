<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluateActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/evaluate_editText_search"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="상점 이름"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/evaluate_button_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="검색" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/evaluate_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="본찌돈까스"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/evaluate_textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="서부로2106번길 26-2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evaluate_textView_name" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/evaluate_textView_door"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="출입구"
                android:textSize="24sp" />

            <RatingBar
                android:id="@+id/evaluate_ratingBar_door"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:stepSize="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/evaluate_textView_space"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="공간"
                android:textSize="24sp" />

            <RatingBar
                android:id="@+id/evaluate_ratingBar_space"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:stepSize="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/evaluate_textView_toilet"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="화장실"
                android:textSize="24sp" />

            <RatingBar
                android:id="@+id/evaluate_ratingBar_toilet"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:stepSize="1" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>